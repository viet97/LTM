<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_marginTop="4dp"
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginVertical="4dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/avatar"
        android:id="@+id/post_user_avatar"
        android:background="@drawable/round_corners"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:id="@+id/name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/post_user_avatar"
        android:textColor="@color/black"
        android:text="Dang sdsadasdasdas"
        android:layout_alignTop="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="12sp"
        android:layout_marginBottom="4dp"
        android:text="12:00:00"
        android:layout_alignBottom="@id/post_user_avatar"
        android:id="@+id/time"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/post_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_below="@id/post_user_avatar"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/content"
        android:text="hom nay buon qua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginHorizontal="8dp"
        android:id="@+id/above_button_like"
        android:layout_marginTop="8dp"
        android:layout_below="@id/content"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/above_button_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginLeft="8dp"
            android:padding="4dp"
            android:id="@+id/like"
            android:background="@color/white"
            android:src="@drawable/like_button_image"
            android:scaleType="fitXY"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginLeft="28dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:id="@+id/comment"
            android:background="@color/white"
            android:src="@drawable/comment_button_image"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:layout_gravity="center"

            android:layout_marginLeft="4dp"
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>